extends layout

block content
    include includes/_header.pug
    section#blog.blog-me.pt-100.pb-100
        .container.listOfPosts
            .row
                .col-xl-6.mx-auto.text-center
                    .section-title.mb-100
                        h4 List of posts
            .row
                    // Single Blog
                    .single-blog
                        .blog-img
                            img(src='/images/mainImg.jpg', alt='')
                            .post-category
                                a(href='#') #{category}
                        .blog-content
                            .blog-title
                                h4
                                    a(href='#') #{title}
                                .meta
                                    ul
                                        li #{date}
                            p
                                | #{prewiew}
                            a.box_btn(href='#') read more
