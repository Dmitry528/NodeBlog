extends layout

block content
    include includes/_header.pug
    .container.createPost
        .row.justify-content-center
            .col-xl-6
                form(action='/blog/create', method='post', enctype="multipart/form-data")
                    .form-group
                        label(for='formGroupExampleInput') Post title
                        input#formGroupExampleInput.form-control(type='text', placeholder='Post title', name='title', required)
                    .form-group
                        label(for='formGroupExampleInput2') Descriptoin
                        input#formGroupExampleInput2.form-control(type='text', placeholder='Prewiew', name='prewiew', required)
                    .form-group
                        label(for='formGroupExampleInput2') Author
                        input#formGroupExampleInput2.form-control(type='text', placeholder='Author', name="author", required)
                    .form-group
                        label(for='formGroupExampleInput2') Category
                        input#formGroupExampleInput2.form-control(type='text', placeholder='Category', name='category', required)
                    .form-group
                        label(for='formGroupExampleInput2') Select your image
                        <input type="file" name="file" />
                    button(type="submit").btn.btn-success Submit
                if msg
                    h2.errorMSG #{msg}



